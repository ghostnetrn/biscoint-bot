{
  "name": "bitcoin-bot",
  "description": "Arbitragem com Bitcoin",
  "logo": "https://biscoint.io/images/biscoint-icon.svg",
  "repository": "https://github.com/itxtoledo/biscoint-bot",
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "keywords": [
    "node",
    "bitcoin",
    "trading",
    "trader",
    "bot",
    "market",
    "maker",
    "algo",
    "crypto"
  ],
  "env": {
    "apiKey": {
      "description": "API Key Biscoint",
      "required": true
    },
    "apiSecret": {
      "description": "API Secret Biscoint",
      "required": true
    },
    "amount": {
      "description": "Se 'initialSell' for 'true', preencha o valor em Bitcoin. Valor padrão: 0.001",
      "required": true,
      "value": "0.001"
    },
    "initialSell": {
      "description": "Se o seu amount está em Bitcoin deixe 'true'. Valor padrão: true",
      "required": true,
      "value": "true"
    },
    "test": {
      "description": "Ativar modo simulação",
      "required": true,
      "value": "false"
    },
    "differencelogger": {
      "description": "Logs do bot",
      "required": true,
      "value": "true"
    },
    "botchat": {
      "description": "Chat id do Telegram. Exemplo: 14872718712",
      "required": true
    },
    "token": {
      "description": "Token do Telegram. Exemplo: 1688943477:ACDhWI4A0-cy--L3IGgjjp2yuPq2TC7TJvg",
      "required": true
    }
  }
}