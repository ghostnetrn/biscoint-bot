{
  "name": "bitcoin-bot",
  "description": "Arbitragem com Bitcoin",
  "logo": "https://biscoint.io/images/biscoint-icon.svg",
  "repository": "https://github.com/ghostnetrn/biscoint-arbitrage-bot",
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "keywords": [
    "node",
    "bitcoin",
    "trading",
    "trader",
    "bot",
    "market",
    "maker",
    "algo",
    "crypto"
  ],
  "env": {
    "apiKey": {
      "description": "Sua API Key da Biscoint",
      "required": true
    },
    "apiSecret": {
      "description": "Sua API Secret da Biscoint",
      "required": true
    },
    "initialSell": {
      "description": "Valor inicial de compra. Valor padrao: false",
      "required": true,
      "value": "false"
    },
    "botchat": {
      "description": "Chat id do Telegram. Exemplo: 14872718712",
      "required": true
    },
    "token": {
      "description": "Token do Telegram. Exemplo: 1688943477:ACDhWI4A0-cy--L3IGgjjp2yuPq2TC7TJvg",
      "required": true
    },
    "amount": {
      "description": "Valor em Bitcoin.",
      "required": true,
      "value": "0.001"
    },
    "test": {
      "description": "Ativar modo simulação",
      "required": true,
      "value": "false"
    },
    "differencelogger": {
      "description": "Logs do bot",
      "required": true,
      "value": "true"
    },
    "intervalMs": {
      "description": "Intervalo em milissegundo.",
      "required": true,
      "value": "5500"
    }
  }
}